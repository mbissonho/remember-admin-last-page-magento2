<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-login"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="form.additional.info">
            <block name="mbissonho-login-session-storage-hidden-input"
                template="Mbissonho_RememberAdminLastPage::login-session-storage-hidden-input.phtml"
                cacheable="false"
            />
            <block name="mbissonho-remove-remember"
                   template="Mbissonho_RememberAdminLastPage::remove-remember.phtml"
                   cacheable="false"
            />
        </referenceContainer>
        <referenceContainer name="root">
            <block name="mbissonho-last-page-notification-manager"
                   template="Mbissonho_RememberAdminLastPage::last-page-notification-manager.phtml"
                   before="login.footer"
            />
        </referenceContainer>
    </body>
</page>
